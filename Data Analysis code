<?php
include 'db_connect.php';

// Query to get the count of variants for each gene
$sql = "SELECT g.gene_id, g.gene_name, COUNT(v.variant_id) AS variant_count
        FROM Genes g
        LEFT JOIN Variants v ON g.gene_id = v.gene_id
        GROUP BY g.gene_id, g.gene_name
        ORDER BY g.gene_id";

$result = $conn->query($sql);

if ($result->num_rows > 0) {
    // Output data of each row
    echo "<table><tr><th>Gene ID</th><th>Gene Name</th><th>Variant Count</th></tr>";
    while($row = $result->fetch_assoc()) {
        echo "<tr><td>" . $row["gene_id"] . "</td><td>" . $row["gene_name"] . "</td><td>" . $row["variant_count"] . "</td></tr>";
    }
    echo "</table>";
} else {
    echo "0 results";
}
$conn->close();
?>
